{
    "parser": "babel-eslint",
    "rules": {
        "no-extra-boolean-cast": 0,
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ]
    },
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended"
}
